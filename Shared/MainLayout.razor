<PageTitle>DBExplorer</PageTitle>

<div class="page d-flex">
    
        <NavMenu />


    <main class="flex-grow-1 bg-light text-dark p-4">
        <div class="top-row px-4 text-dark bg-black text-white rounded mb-3">
            <h1 class="h3">Database</h1>
        </div>

